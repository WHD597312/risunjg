<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:drawable="@android:color/darker_gray">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dip"
                android:color="#ff000000" />
            <corners android:radius="2dp"/>
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:drawable="@android:color/white">
        <shape
            android:shape="rectangle">
            <stroke
                android:width="1dip"
                android:color="#ff000000" />
            <solid android:color="#ff9d77"/>

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

        </shape>
    </item>

</selector>