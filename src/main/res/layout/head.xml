<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dip"
    android:background="@drawable/configbgd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/faceimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="15dp"
        app:actualImageScaleType="centerInside"
        app:roundAsCircle="true"
        app:roundingBorderColor="#fff3cf44"
        app:roundingBorderWidth="1dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dip"
        android:text="Piyell"
        android:textColor="#000000"
        android:textSize="25dip"
        android:id="@+id/nametext"
        android:layout_alignTop="@id/faceimage"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toRightOf="@+id/faceimage"
         />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QQ:479683952"
        android:textColor="#000000"
        android:paddingLeft="10dip"
        android:textSize="20dip"
        android:id="@+id/idtext"
        android:layout_alignBottom="@+id/faceimage"
        android:layout_toRightOf="@+id/faceimage"
        android:layout_toEndOf="@+id/faceimage" />
</RelativeLayout>